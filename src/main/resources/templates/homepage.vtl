<form action="/paragraphs" id="mainForm" method="post">	
  	<input type="text" class="form-control" id="where" name="where" value='$where'>   
	<label for="reviewTitle">Title:</label>
	<input type="text" class="form-control" id="reviewTitle" name="title" value="$title">
	<label for="typeSelect">Type:</label>
    <select class="form-control" name="type" id="typeSelect">
    #foreach ($option in $options)
    	<option>$option.getName()</option>
	#end
	</select>
	<label for="reviewer">Author:</label>
	<input type="text" class="form-control" id="reviewer" name="author" value="$author">
	<label for="reviewer">Reviewer:</label>
	<input type="text" class="form-control" id="reviewer" name="reviewer" value="$reviewer">
	<br>	
    <input type="checkbox" value="1" name="reset" id="chbox_reset">
    <button type="submit" class="btn btn-primary">Next</button>    
    <button class="btn btn-primary" id="btn_help" style="float:right">Show help</button>	
    <button class="btn btn-danger" id="btn_reset" style="float:right" title="Reset all progress and start over">Reset</button>
</form>
<br>
<form action="/admin">
    <button type="submit" class="btn btn-primary">Manage the database</button>
</form>